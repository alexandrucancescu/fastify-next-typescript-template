{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 18",

  "compilerOptions": {
    "lib": ["es2022"],
    "module": "es2022",
    "target": "es2022",
    "jsx": "preserve",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "rootDir": ".",
    "outDir": "../dist",
    "baseUrl": "../",
    "paths": {
      "*": ["../node_modules/*"]
    }
  },
  "filesGlob": [
    "../node_modules/@types/*.d.ts"
  ],
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    "../node_modules"
  ]
}